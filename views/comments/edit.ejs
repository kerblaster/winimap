<% include ../partials/header %>

<link rel="stylesheet" href="/stylesheets/forms.css">

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
        
            <form action="/locations/<%= location_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" maxlength="1024">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
            
            <a href="/locations">Go Back</a>
            
        </div>
    </div>
</div>
<% include ../partials/footer %>